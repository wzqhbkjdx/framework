<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_alignParentBottom="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:id="@+id/title_comment_ll_btm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageView
                android:id="@+id/title_comment_img_btm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@mipmap/find_comment_icon" />

            <TextView
                android:id="@+id/title_comment_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title_comment_img_btm"
                android:layout_marginLeft="-8dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="-2dp"
                android:layout_toRightOf="@+id/title_comment_img_btm"
                android:text="0"
                android:textColor="#fd951e"
                android:textSize="10sp" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/title_left_ll_btm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageView
                android:id="@+id/title_left_img_btm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@mipmap/find_details_like" />

            <TextView
                android:id="@+id/title_left_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title_left_img_btm"
                android:layout_marginLeft="-8dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="-2dp"
                android:layout_toRightOf="@+id/title_left_img_btm"
                android:text="0"
                android:textColor="#fd951e"
                android:textSize="10sp" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/title_center_ll_btm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?selectableItemBackground"
            android:gravity="center">

            <ImageView
                android:id="@+id/title_center_img_btm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@mipmap/find_collect_icon" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/title_right_ll_btm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?selectableItemBackground"
            android:gravity="center">

            <ImageView
                android:id="@+id/title_right_img_btm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@mipmap/feed_detail_more" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
