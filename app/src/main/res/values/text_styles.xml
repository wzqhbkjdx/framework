<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Title">
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textSize">@dimen/number_13</item>
        <item name="android:textColor">@color/font_black_7</item>
    </style>

    <style name="TextView.SubTitle">
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textSize">@dimen/number_11</item>
        <item name="android:textColor">@color/font_black_4</item>
    </style>


    <style name="TextView.User">
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textSize">@dimen/number_11</item>
        <item name="android:textColor">@color/font_black_3</item>
    </style>


</resources>